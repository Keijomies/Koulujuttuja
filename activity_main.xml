<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Kerto"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:onClick="LaskeKerto"
        android:text="X"
        app:layout_constraintEnd_toStartOf="@+id/Jako"
        app:layout_constraintTop_toBottomOf="@+id/Luku2" />

    <Button
        android:id="@+id/Jako"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:onClick="LaskeJako"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Luku2" />

    <TextView
        android:id="@+id/Tuloste"
        android:layout_width="188dp"
        android:layout_height="63dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:hint="Tänne tulee tulos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Miinus"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Luku1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Kirjoita tähän luku"
        android:inputType="textPersonName|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Luku2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Kirjoita tähänkin luku"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Luku1" />

    <Button
        android:id="@+id/Miinus"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:onClick="LaskeMinus"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/Kerto"
        app:layout_constraintTop_toBottomOf="@+id/Luku2" />

    <Button
        android:id="@+id/Plus"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:onClick="LaskePlus"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/Miinus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Luku2" />

</androidx.constraintlayout.widget.ConstraintLayout>